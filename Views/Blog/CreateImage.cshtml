@model Blog

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<div class="container-fluid dashboard-content ">

    <!-- pageheader  -->

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Quản Lý  </h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">View Blog</a></li>
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Create blog</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create blog image</li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>

    <main role="main">
        <form>
            <h3>Blog Details:</h3>

            <input type="hidden" id="Blogid" name="Blogid" value="@Model.Blogid" />
            <div class="container" style="background: white;border-radius:5px">
                <div class="row">
                    <div class="col-md-6">
                        <br />
                        <div class="form-group">
                            <label for="HomeStatus">Home Status</label>
                            <input type="text" id="HomeStatus" name="HomeStatus" value="@(Model.HomeStatus == true ? "Enable" : "Disable")" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="DateUp">Date Up</label>
                            <input type="text" id="Date Up" name="Date Up" value="@Model.DateUp" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <br />
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" value="@Model.name" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="isCollection">Is Collection</label>
                            <input type="text" id="isCollection" name="isCollection" value="@Model.isCollection.ToString()" readonly class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea id="content" name="content" readonly class="form-control">@Model.content</textarea>
                </div>

                <div class="form-group">
                    <label for="content2">Second Content</label>
                    <textarea id="content2" name="content2" readonly class="form-control">@Model.content2</textarea>
                </div><br />

            </div>
        </form>
        <hr />
        @foreach (var l in Model.ImageBlogs)
        {
            <img src="@l.ImageURL" style="width: 200px; height: 150px">
        }
        <hr />
        <form action="/Blog/CreateImage" method="post" enctype="multipart/form-data">

            <h3>Image Details:</h3>

            <input type="hidden" id="Blogid" name="Blogid" value="@Model.Blogid" class="form-control" />

            <div class="container" style="background: white;border-radius:5px">
                <br />
                <div class="form-group">
                    <label for="ImageUrl">Image URL</label>
                    <input type="file" id="ImageUrl" name="ImageUrl" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="DateUp">Date Up</label>
                    <input type="datetime" id="DateUp" name="DateUp" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="IsBigImg" name="IsBigImg" value="true" />
                    <label class="form-check-label" for="IsBigImg">IsBigImg</label>
                </div><br />

                <div>
                    <button type="submit" class="btn btn-primary">Create Image</button>
                    <a href="/Blog/ViewBlog" class="btn btn-primary">View Blog</a>
                </div><br />
            </div>

        </form>
    </main>
    <!-- end pageheader  -->
</div>




