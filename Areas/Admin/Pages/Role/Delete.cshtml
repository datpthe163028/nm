@page "/admin/delete-role/{roleid}"
@model Project.Admin.Role.DeleteModel

@{
    ViewData["Title"] = "Xóa role";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Bạn có chắc chắn xóa <strong>@Model.role.Name</strong></p>
            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Index">Tất cả các Role</a>
            </div>
        </form>
    </div>
</div>